{
  "name": "node-exp-api-boilerplate",
  "version": "1.0.0",
  "description": "Project starter for developing RESTful APIs using Nodejs, Express and MongoDB.",
  "main": "server.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "node ./source/server/index.js",
    "dev": "NODE_ENV=dev nodemon ./source/server/index.js",
    "test": "npm run lint && npm run test-unit",
    "test-watch": "npm run test-unit -- --watch",
    "test-unit": "NODE_ENV=test mocha test/setup.spec.js source/**/*.spec.js  --exit",
    "lint": "eslint source/** test/** --fix",
    "docs": "apidoc -f '.*\\.js$' -i source/ -o docs/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexsalomon/node-exp-api-boilerplate.git"
  },
  "author": "Alex Salomon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexsalomon/node-exp-api-boilerplate/issues"
  },
  "homepage": "https://github.com/alexsalomon/node-exp-api-boilerplate#readme",
  "devDependencies": {
    "@strv/eslint-config-javascript": "^9.1.0",
    "chai": "^4.2.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^5.9.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "sinon": "^7.1.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "convict": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-validation": "^1.0.2",
    "fs-extra": "^7.0.1",
    "helmet": "^3.15.0",
    "http-status": "^1.3.1",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.3.13",
    "morgan": "^1.9.1",
    "path": "^0.12.7",
    "winston": "^3.1.0",
    "winston-sentry-raven-transport": "^1.0.2"
  }
}
